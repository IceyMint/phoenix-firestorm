<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel label="Things" name="objects panel">
	<panel name="sidepanel_inventory_panel" label="">
		<tab_container name="inventory_tab_container">
			<panel label="インベントリ" name="panel_main_inventory" />
			<panel label="マーケットプレイス" name="inbox_outbox_layout_panel">
				<layout_stack name="inbox_outbox_layout_stack_off">
					<layout_panel name="inbox_layout_panel_off">
						<panel name="marketplace_inbox" label="">
							<string name="InboxLabelWithArg">
								受け取ったアイテム（[NUM]）
							</string>
							<string name="InboxLabelNoArg">
								受け取ったアイテム
							</string>
							<text value="受け取ったアイテム" name="inbox_label" />
							<!-- gets auto-hidden in preview editor, change name to view -->
							<text name="inbox_fresh_new_count">
								[NUM] 個の新アイテム
							</text>
							<view_border />
							<panel name="inbox_inventory_placeholder_panel" tool_tip="アイテムを使用するには、そのアイテムをインベントリにドラッグアンドドロップ">
								<text name="inbox_inventory_placeholder">
									マーケットプレイスから購入した商品はここに配達されます。
								</text>
							</panel>
						</panel>
					</layout_panel>
					<layout_panel name="outbox_layout_panel">
						<panel name="marketplace_outbox">
							<string name="OutboxLabelWithArg">
								マーチャントアウトボックス（[NUM]）
							</string>
							<string name="OutboxLabelNoArg">
								マーチャントアウトボックス
							</string>
							<text value="マーチャントアウトボックス" name="outbox_label" />
							<button label="" tool_tip="自分のマーケットプレイス店頭に移動" name="outbox_sync_btn" />
							<loading_indicator name="outbox_sync_indicator" />
							<view_border />
							<panel name="outbox_inventory_placeholder_upperpanel">
								<panel name="outbox_inventory_placeholder_panel">
									<text name="outbox_inventory_placeholder_title">
										取得中...
									</text>
									<text name="outbox_inventory_placeholder_text" />
								</panel>
							</panel>
						</panel>
					</layout_panel>
				</layout_stack>
			</panel>
		</tab_container>
	</panel>

	<!-- keep the buttons so the code doesn't complain about missing controls -Zi -->
	<panel name="hide_buttons">
		<button name="info_btn" />
		<button name="share_btn" />
		<button name="shop_btn" />
		<button name="wear_btn" />
		<button name="play_btn" />
		<button name="teleport_btn" />
		<button name="inbox_btn" />
		<button name="outbox_btn" />
	</panel>
	<panel name="sidepanel__item_panel" label="">
	</panel>
	<panel name="sidepanel__task_panel" label="">
	</panel>
</panel>
