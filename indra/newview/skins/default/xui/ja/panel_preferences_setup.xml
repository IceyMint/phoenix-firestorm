<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel label="セットアップ" name="Input panel">
	<tab_container name="max_bandwidth_layout">
		<panel label="ネットワーク" name="tab-conn">
			<text name="Maximum bandwidth">
				最大帯域幅 ([http://wiki.phoenixviewer.com/fs_speedtest あなたは提案が必要なのですか?]):
			</text>
			<check_box label="カスタムポート" name="connection_port_enabled"/>
			<spinner label="ポート番号:" name="connection_port"/>
			<text name="Web:">
				Webブラウザ:
			</text>
			<text name="numberwebfloaters_label">
				Webブラウザの最大ウィンドウ数:
			</text>
			<combo_box name="web_number_combobox" tool_tip="Webコンテンツのパネルで一度に開けるブラウザウィンドウの最大数を設定">
				<combo_box.item label="無制限" name="web_unlimited" value="0" />
				<combo_box.item label="１画面" name="web_1" value="1" />
				<combo_box.item label="５画面まで" name="web_5" value="5" />
				<combo_box.item label="10画面まで" name="web_10" value="10" />
			</combo_box>
			<check_box label="プラグインを有効にする" name="browser_plugins_enabled"/>
			<check_box label="Cookie を受け入れる" name="cookies_enabled"/>
			<check_box label="Javascript を有効にする" name="browser_javascript_enabled"/>
			<check_box label="メディアブラウザのポップアップを有効にする" name="media_popup_enabled"/>
			<button label="プロキシ設定" label_selected="プロキシ設定" name="set_proxy"/>
		</panel>
		<panel label="場所" name="tab-dir">
			<text name="cache_size_label_l">
				キャッシュサイズ:
			</text>
			<text name="Cache location">
				キャッシュの場所:
			</text>
			<button label="開く" label_selected="開く" name="open_cache"/>
			<button label="設定" label_selected="設定" name="set_cache"/>
			<button label="初期化" label_selected="初期化" name="reset_cache"/>
			<button label="キャッシュクリア" label_selected="キャッシュクリア" name="clear_cache"/>
			<button label="開く" label_selected="開く" name="open_sound_cache"/>
			<button label="設定" label_selected="設定" name="set_sound_cache"/>
			<button label="初期化" label_selected="初期化" name="reset_sound_cache"/>
			<check_box label="ログアウト時に展開されていないDSF（サウンド）キャッシュファイルを削除しない" tool_tip="ここにチェックを入れると、ログアウトする時に展開されていないサウンドファイルをビューワが削除しません。これによってインワールドでのサウンド再生の性能が向上するかもしれません。但し、これによってキャッシュディレクトリがあっと言う間に増大し、しかも最大キャッシュの設定は無視されます。結果的にディスクスペースを過剰に消費することとなります。デフォルトではこのチェックは外してあります。" name="keep_unpacked_cache" />
			<text name="log_path_desc">
				チャットログの場所:
			</text>
			<button label="開く" label_selected="開く" name="open_log_path_button-panelsetup"/>
			<button label="設定" label_selected="設定" name="log_path_button-panelsetup"/>
			<button label="初期化" label_selected="初期化" name="reset_logpath"/>
			<button label="クラッシュログを開く" label_selected="クラッシュログを開く" name="browse_crashlogs"/>
			<button label="設定フォルダを開く" label_selected="設定フォルダを開く" name="browse_settingsdir"/>
		</panel>
    </tab_container>
</panel>
