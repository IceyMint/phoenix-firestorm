<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
can_tear_off="false"
can_resize="false"
can_drag_on_left="false"
can_close="true"
can_dock="true"
bevel_style="in"
height="530"
layout="topleft"
name="Fixed Environment"
save_rect="true"
title="Fixed Environment"
save_visibility="false"
help_topic="fs_fixed_environment"
single_instance="true" 
width="260">

<string name="edit_sky">Edit Sky:</string>
<string name="edit_water">Edit Water:</string>

	<panel
		name="P_Presetname"
		follows="left|top"
		layout="topleft"
		top_pad="5"
		left="5"
		width="250"
		height="30"
		border_visible="true"
		bevel_style="in"
		background_visible="true">

			<text
				follows="left|top"
				top_pad="10"
				left="0"
				width="40"
				height="10"
				name="info_panel_label">
				Name:
			</text>
			
			<line_editor
				follows="left|top"
				top_delta="-5"
				left_pad="0"
				width="205"
				name="settings_name"
				prevalidate_callback="ascii"
				max_length_chars="63"
				height="20"/>
			
	</panel>
	
	<panel
	name="P_Environment_Tab"
	follows="left|top"
	layout="topleft"
	top_pad="5"
	left="5"
	width="250"
	height="445"
	border_visible="true"
	bevel_style="in"
	background_visible="true">
		<tab_container
			follows="all"
			halign="center"
			layout="topleft"
			left="0"
			top_pad="5"
			height="440"
			width="250"
			name="tab_settings"
			tab_position="top"
			tab_max_width="80"
			tab_width="80">
		</tab_container>
	</panel>

	<panel
		name="info_panel"
		follows="left|top"
		layout="topleft"
		top_pad="0"
		left="5"
		width="250"
		height="33"
		border_visible="true"
		bevel_style="in"
		background_visible="true">

		<button
			height="23"
			label="Load"
			follows="left|top"
			left="5"
			top_pad="5"
			name="btn_load"
			tool_tip="Load a settings from inventory" 
			width="55" />
			
		<button
			height="23"
			label="Import"
			follows="left|top"
			left_pad="01"
			top_delta="0"
			name="btn_import"
			tool_tip="Import legacy settings from disk." 
			width="55" />
			
		<button
			follows="left|top"
			height="23"
			label="Save"
			left_pad="1"
			layout="topleft"
			name="btn_commit"
			top_delta="0"
			width="55" />
		<button
			follows="left|top"
			height="23"
			name="btn_flyout"
			label=""
			layout="topleft"
			left_pad="0"
			tab_stop="false"
			top_delta="0"
			image_selected="SegmentedBtn_Right_Selected_Press"
			image_unselected="SegmentedBtn_Right_Off"
			image_pressed="SegmentedBtn_Right_Press"
			image_pressed_selected="SegmentedBtn_Right_Selected_Press"
			image_overlay="Arrow_Small_Up"
			width="20"/>
		<button
			follows="left|top"
			height="23"
			left_pad="0"
			label="Cancel"
			layout="topleft"
			name="btn_cancel"
			top_delta="0"
			tool_tip="Revert to last saved version"
			width="55" />
	</panel>

</floater>
