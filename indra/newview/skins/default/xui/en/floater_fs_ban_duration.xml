<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 can_minimize="false"
 can_tear_off="false"
 can_resize="false"
 can_drag_on_left="false"
 can_close="true"
 height="75"
 layout="topleft"
 name="Ban duration"
 title="Ban duration"
 single_instance="true" 
 width="175">
    <text
     type="string"
     length="1"
     follows="left|top"
     height="15"
     layout="topleft"
     left="5"
     name="duration_textbox"
     top="10"
     width="75">
        Ban duration:
    </text>
    <spinner
     allow_text_entry="true"
     decimal_digits="0"
     follows="left|top"
     height="20"
     increment="1"
     layout="topleft"
     left_pad="0"
     max_val="8766"
     min_val="0"
     name="ban_time"
     top_delta="-4"
     width="50"
     tool_tip="How long to ban for, 0 means forever"/>
     <text
     type="string"
     length="1"
     follows="left|top"
     height="15"
     layout="topleft"
     left_pad="5"
     name="hours_textbox"
     top="10"
     width="75">
        hours.
    </text>
    <text
    type="string"
    length="200"
    follows="left|top"
    height="15"
    layout="topleft"
    left="5"
    name="info_textbox"
    top_delta="20">
       0 means forever.
    </text>
    <button
     follows="left|top"
     height="23"
     label="OK"
     layout="topleft"
     left="5"
     name="BanConfirmButton"
     top_delta="20"
     width="80">
    </button>
    <button
     follows="left|top"
     height="23"
     label="Cancel"
     layout="topleft"
     right="-5"
     name="BanCancelButton"
     top_delta="0"
     width="80">
    </button>
</floater>
