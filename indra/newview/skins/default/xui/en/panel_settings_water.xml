			<text
			name="refraction_scale_above_label"
			follows="left|top"
			height="15"
			layout="topleft"
			left="5"
			width="100">
			Refract Above:
			</text>
				
                    <slider
                            control_name="water_scale_above"
                            decimal_digits="2"
                            follows="left|top"
                            increment="0.01"
                            initial_value="0.1"
                            height="16"
							layout="topleft"
                            left="95"
                            min_val="0"
                            max_val="3"
                            name="water_scale_above"
                            left_pad="5"
                            width="150"
                            can_edit_text="true" />
                    

					
					<text
                            name="refraction_scale_below_label"
							follows="left|top"
							height="15"
							layout="topleft"
							left="5"
							width="100">
                        Refract Below:
                    </text>

					
                    <slider
                            control_name="water_scale_below"
                            decimal_digits="2"
                            follows="left|top"
                            height="16"
                            increment="0.01"
                            initial_value="0"
						    layout="topleft"
                            left="95"
                            min_val="0"
                            max_val="3"
                            name="water_scale_below"
                            left_pad="5"
                            width="150"
                            can_edit_text="true"/>
							
		
							
				<text
				name="blur_multiplier_label"
				follows="left|top"
				height="15"
				layout="topleft"
				left="5"
				width="100">
				Blur Multiplier
				</text>
					

				
                    <slider
                            control_name="water_blur_multip"
                            follows="left|top"
                            height="16"
                            increment="0.001"
                            initial_value="0"
						    layout="topleft"
                            left="95"
                            min_val="-0.5"
                            max_val="0.5"
                            name="water_blur_multip"
                            left_pad="5"
                            width="150"
                            can_edit_text="true"/>

	</panel>
						
						
