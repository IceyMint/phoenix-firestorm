				<color_swatch
				 can_apply_immediately="true"
				 follows="left|top"
				 height="40"
				 label_height="0"
				 layout="topleft"
				 left="20"
				 name="water_fog_color"
				 top_pad="5"
				 width="90"/>
				 
				 <texture_picker
				 height="60"
				 layout="topleft"
				 left_pad="40"
				 name="water_normal_map"
				 top_delta="0"
				 width="60"/>
				
				<text
				 follows="top|left"
				 height="20"
				 font="SansSerifSmall"
				 layout="topleft"
				 left="20"
				 name="water_fog_label"
				 top_pad="-13"
				 width="110"
				 tool_tip="Water Fog Color - This changes the color of the volume tint of the water, essentially defining the color of the water itself. If your water has no fog, it will appear crystal clear and colorless."
				 word_wrap="true">
					Water Fog Color
				</text>
				
				<text
				 follows="left|top|right"
				 font="SansSerifSmall"
				 height="20"
				 layout="topleft"
				 left_pad="20"
				 name="normal_map_label"
				 top_delta="0"
				 tool_tip="Normal Map - Image used for determining reflections and refractions. Any texture may be used for this setting- but true normal maps work best. Try snake skin, tiles, or any other normal map for some wacky effects!"
				 width="100">
					Normal Map
				</text>



</panel>


	<panel
	name="P_Wave_Fog"
	label="Fog"
	follows="left|top"
	layout="topleft"
	top_pad="0"
	left="0"
	width="250"
	height="80"
	border_visible="true"
	bevel_style="in"
	background_visible="true">


					
            <text
			name="density_exponent_label"
			follows="left|top"
			height="15"
			layout="topleft"
			left="5"
			width="50">
			Density:
            </text>

            <slider
                    decimal_digits="1"
                    follows="left|top"
                    height="16"
                    increment="0.01"
                    initial_value="0"
					layout="topleft"
                    left="55"
                    min_val="-10"
                    max_val="10"
                    name="water_fog_density"
                    left_pad="5"
                    width="190"
                    can_edit_text="true"/>
		
					
			<text
			name="underwater_modifier_label"
			follows="left|top"
			height="15"
			layout="topleft"
			left="5"
			width="50">
			Modifier:</text>
	
				
            <slider
                    decimal_digits="2"
                    follows="left|top"
                    height="16"
                    increment="0.01"
                    initial_value="0"
				    layout="topleft"
                    left="55"
                    min_val="0.0"
                    max_val="20.0"
                    name="water_underwater_mod"
                    left_pad="5"
                    width="190"
                    can_edit_text="true"/>
					
                   
			<text
			name="FresnelScaleText"
			follows="left|top"
			height="15"
			layout="topleft"
			left="5"
			width="50">
			Fres. Scale:
			</text>


                    <slider
                            decimal_digits="2"
                            follows="left|top"
                            height="16"
                            increment="0.01"
                            initial_value="0.7"
						    layout="topleft"
                            left="55"
                            name="water_fresnel_scale"
                            left_pad="5"
                            width="190"
                            can_edit_text="true"/>
							

							
			<text
			name="FresnelOffsetText"
			follows="left|top"
			height="15"
			layout="topleft"
			left="5"
			width="50">
			Fres. Offset:
			</text>

					
                    <slider
                            decimal_digits="2"
                            follows="left|top"
                            increment="0.01"
                            initial_value="0.7"
                            height="16"
						    layout="topleft"
                            left="55"
                            name="water_fresnel_offset"
                            left_pad="5"
                            width="190"
                            can_edit_text="true"/>
 



	</panel>
 
