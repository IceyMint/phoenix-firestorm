<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 name="quickprefs"
 height="328"
 width="260"
 layout="topleft"
 can_close="true"
 can_dock="true"
 can_resize="false"
 help_topic="fs_quick_preferences"
 legacy_header_height="18"
 positioning="centered"
 save_dock_state="true"
 save_rect="true"
 save_visibility="true"
 single_instance="true"
 title="Quick Preferences"
>
    <panel
     name="quickprefs"
     top="16"
     left="0"
     height="313"
     width="260"
     follows="all"
     layout="topleft"
    >
        <layout_stack
         name="options_stack"
         top="4"
         left="0"
         height="0"
         width="260"
         follows="all"
         layout="topleft"
         border_size="0"
         orientation="vertical"
        >
            <!-- <FS:Zi> dummy panel to make XUI validation happy -->
            <layout_panel
             name="dummy_options_panel"
             height="20"
             follows="all"
             layout="topleft"
             visible="false"
            >
            </layout_panel>
        </layout_stack>
        <view_border
         name="divider_line_dynamic_to_static"
         top_pad="2"
         left="2"
         right="-2"
         height="2"
         follows="left|right|bottom"
         layout="topleft"
        />
        <layout_stack
         name="wl_options_stack"
         top_pad="0"
         left="0"
         height="302"
         width="260"
         follows="left|right|bottom"
         layout="topleft"
         orientation="vertical"
        >
            <layout_panel
             name="wl_options_panel"
             height="157"
             follows="all"
             layout="topleft"
             invisibility_control="QuickPrefsEditMode"
            >
                <text
                 name="HoverHeightLabel"
                 tool_tip="Set the hover height of your avatar"
                 top_pad="5"
                 left="5"
                 height="10"
                 width="90"
                 follows="left|top"
                 layout="topleft"
                 length="1"
                 mouse_opaque="false"
                 type="string"
                >
                    Hover Height:
                </text>
                <slider
                 name="HoverHeightSlider"
                 enabled="false"
                 top_delta="-2"
                 left_pad="5"
                 right="-7"
                 height="16"
                 follows="left|right|top"
                 layout="topleft"
                 can_edit_text="true"
                 decimal_digits="3"
                 increment="0.001"
                 initial_value="0.0"
                 text_width="40"
                />
                <!--<FS:HG> FIRE-6340, FIRE-6567 - Setting Bandwidth issues -->
                <text
                 name="Maximum bandwidth"
                 tool_tip="Set your Network bandwidth in Kbps (kilobits per second)"
                 top_pad="5"
                 left="5"
                 height="10"
                 width="90"
                 follows="left|top"
                 layout="topleft"
                 length="1"
                 mouse_opaque="false"
                 type="string"
                >
                    Max Bandwidth:
                </text>
                <slider
                 name="max_bandwidth"
                 top_delta="-2"
                 left_pad="5"
                 right="-7"
                 height="16"
                 follows="left|right|top"
                 layout="topleft"
                 can_edit_text="true"
                 control_name="ThrottleBandwidthKBPS"
                 decimal_digits="0"
                 increment="50"
                 initial_value="500"
                 max_val="3000"
                 min_val="50"
                 text_width="40"
                />
                <text
                 name="Maximum complexity"
                 tool_tip="Controls at what point a visually complex avatar is drawn as a jelly doll"
                 top_pad="5"
                 left="5"
                 height="18"
                 width="90"
                 follows="left|top"
                 layout="topleft"
                 length="1"
                 mouse_opaque="false"
                 type="string"
                >
                    Max Complexity:
                </text>
                <slider
                 name="IndirectMaxComplexity"
                 top_delta="-2"
                 left_pad="5"
                 right="-58"
                 height="16"
                 follows="left|right|top"
                 layout="topleft"
                 control_name="IndirectMaxComplexity"
                 decimal_digits="0"
                 increment="1"
                 initial_value="101"
                 max_val="101"
                 min_val="1"
                 show_text="false"
                 text_width="40"
                />
                <text
                 name="IndirectMaxComplexityText"
                 top_delta="2"
                 left_pad="5"
                 height="16"
                 width="50"
                 follows="left|top"
                 layout="topleft"
                 length="1"
                 text_readonly_color="LabelDisabledColor"
                 type="string"
                >
                    No Limit
                </text>
                <!--</FS:HG> FIRE-6340, FIRE-6567 - Setting Bandwidth issues -->
                <text
                 name="WL Sky"
                 tool_tip="Windlight presets for your sky"
                 top_delta="24"
                 left="5"
                 height="10"
                 width="90"
                 follows="left|top"
                 layout="topleft"
                 length="1"
                 mouse_opaque="false"
                 type="string"
                >
                    WL Sky:
                </text>
                <combo_box
                 name="WLPresetsCombo"
                 top_delta="-4"
                 left_delta="58"
                 height="20"
                 width="150"
                 follows="left|top"
                 layout="topleft"
                />
                <button
                 name="WLPrevPreset"
                 label=""
                 enabled="true"
                 bottom_delta="-0"
                 left_delta="152"
                 height="20"
                 width="20"
                 follows="left|top"
                 image_overlay="Arrow_Left_Off"
                 label_selected=""
                 scale_image="true"
                />
                <button
                 name="WLNextPreset"
                 label=""
                 enabled="true"
                 bottom_delta="-0"
                 left_delta="21"
                 height="20"
                 width="20"
                 follows="left|top"
                 image_overlay="Arrow_Right_Off"
                 label_selected=""
                 scale_image="true"
                />
                <text
                 name="WL Water"
                 tool_tip="Windlight presets for your water"
                 top_delta="25"
                 left="5"
                 height="10"
                 width="90"
                 follows="left|top"
                 layout="topleft"
                 length="1"
                 mouse_opaque="false"
                 type="string"
                >
                    WL Water:
                </text>
                <combo_box
                 name="WaterPresetsCombo"
                 top_delta="-4"
                 left_delta="58"
                 height="20"
                 width="150"
                 follows="left|top"
                 layout="topleft"
                />
                <button
                 name="WWPrevPreset"
                 label=""
                 enabled="true"
                 bottom_delta="-0"
                 left_delta="152"
                 height="20"
                 width="20"
                 follows="left|top"
                 image_overlay="Arrow_Left_Off"
                 label_selected=""
                 scale_image="true"
                />
                <button
                 name="WWNextPreset"
                 label=""
                 enabled="true"
                 bottom_delta="-0"
                 left_delta="21"
                 height="20"
                 width="20"
                 follows="left|top"
                 image_overlay="Arrow_Right_Off"
                 label_selected=""
                 scale_image="true"
                />
                <text
                 name="Day Cycle"
                 tool_tip="Windlight presets for your day cycle"
                 top_delta="24"
                 left="5"
                 height="10"
                 width="90"
                 follows="left|top"
                 layout="topleft"
                 length="1"
                 mouse_opaque="false"
                 type="string"
                >
                    Day Cycle:
                </text>
                <combo_box
                 name="DCPresetsCombo"
                 top_delta="-4"
                 left_delta="58"
                 height="20"
                 width="150"
                 follows="left|top"
                 layout="topleft"
                />
                <button
                 name="DCPrevPreset"
                 label=""
                 enabled="true"
                 bottom_delta="-0"
                 left_delta="152"
                 height="20"
                 width="20"
                 follows="left|top"
                 image_overlay="Arrow_Left_Off"
                 label_selected=""
                 scale_image="true"
                />
                <button
                 name="DCNextPreset"
                 label=""
                 enabled="true"
                 bottom_delta="-0"
                 left_delta="21"
                 height="20"
                 width="20"
                 follows="left|top"
                 image_overlay="Arrow_Right_Off"
                 label_selected=""
                 scale_image="true"
                />
                <text
                 top_pad="7"
                 left="10"
                 height="10"
                 width="90"
                 follows="left|top"
                 layout="topleft"
                >
                    Sun Position:
                </text>
                <sun_moon_trackball
                 name="sun_rotation"
                 top_pad="5"
                 left_delta="0"
                 height="150"
                 width="150"
                 follows="left|top"
                 thumb_mode="sun"
                />
                <button
                 name="ResetToRegionDefault"
                 label=""
                 tool_tip="Reset the WindLight options to region default"
                 enabled="true"
                 top_delta="-20"
                 left="236"
                 height="20"
                 width="20"
                 follows="left|top"
                 image_overlay="StopReload_Off"
                 label_selected=""
                 scale_image="true"
                />
                <text
                 top_delta="5"
                 left="170"
                 height="10"
                 width="90"
                 follows="left|top"
                 layout="topleft"
                >
                    WL Time:
                </text>
                <multi_slider
                 name="time_offset"
                 top_delta="15"
                 left_delta="15"
                 height="150"
                 width="15"
                 follows="left|top"
                 layout="topleft"
                 can_edit_text="true"
                 decimal_digits="0"
                 increment="120"
                 initial_value="0"
                 max_sliders="1"
                 max_val="86400"
                 orientation="vertical"
                 show_text="false"
                />
                <!-- <FS:Zi> floater titlebar button to edit dynamic quickprefs -->
                <button
                 name="button_edit"
                 label=""
                 tool_tip="Click here to configure your Quick Preferences controls"
                 top_delta="130"
                 left="236"
                 height="20"
                 width="20"
                 follows="right|top"
                 layout="topleft"
                 control_name="QuickPrefsEditMode"
                 image_overlay="Edit_Wrench"
                 toggle="true"
                />
                <!-- </FS:Zi> -->
            </layout_panel>
        </layout_stack>
    </panel>
    <!-- <FS:Zi> Dynamic quick prefs: edit overlay -->
    <panel
     name="edit_overlay_panel"
     top="-138"
     left="1"
     right="-1"
     height="143"
     follows="left|right|bottom"
     layout="topleft"
     visibility_control="QuickPrefsEditMode"
    >
        <view_border
         name="divider_line_edit_options"
         top="0"
         left="0"
         right="-1"
         height="2"
         follows="all"
         layout="topleft"
        />
        <button
         name="move_up_button"
         tool_tip="Move selected control one slot up"
         top="8"
         left="4"
         height="23"
         width="20"
         follows="left|top"
         layout="topleft"
         enabled_control="QuickPrefsSelectedControl"
         image_overlay="Arrow_Up"
        />
        <button
         name="add_new_button"
         tool_tip="Add a new quick preferences control"
         top_delta="0"
         left_pad="4"
         height="23"
         width="20"
         follows="left|top"
         layout="topleft"
         image_overlay="AddItem_Off"
        />
        <line_editor
         name="label_edit"
         label="Control label:"
         tool_tip="Type the label for the control here"
         left_pad="4"
         height="23"
         width="185"
         follows="left|top"
         layout="topleft"
         enabled_control="QuickPrefsSelectedControl"
        />
        <button
         name="move_down_button"
         tool_tip="Move selected control one slot down"
         left="4"
         height="23"
         width="20"
         follows="left|top"
         layout="topleft"
         enabled_control="QuickPrefsSelectedControl"
         image_overlay="Arrow_Down"
        />
        <combo_box
         name="control_name_combo"
         tool_tip="Select control from the list of debug settings"
         left_pad="4"
         height="23"
         width="225"
         follows="left|top"
         layout="topleft"
         enabled_control="QuickPrefsSelectedControl"
        >
            <combo_box.item
             name="control_name_list_header"
             label="=== Choose ==="
             value=""
             type="string"
            />
        </combo_box>
        <text
         name="control_type_label"
         top_pad="8"
         left="4"
         height="23"
         width="42"
         follows="left|top"
         layout="topleft"
         enabled_control="QuickPrefsSelectedControl"
        >
            Type:
        </text>
        <combo_box
         name="control_type_combo_box"
         tool_tip="Select the type of user interface control you want to use for this setting"
         top_delta="-5"
         left_pad="4"
         height="23"
         width="135"
         follows="left|top"
         layout="topleft"
         enabled_control="QuickPrefsSelectedControl"
        >
            <!-- do not use <combo_item>Foo</combo_item>, it doesn't work -->
            <combo_box.item
             name="Checkbox"
             label="Checkbox"
             value="0"
             type="string"
            />
            <combo_box.item
             name="Text"
             label="Text"
             value="1"
             type="string"
            />
            <combo_box.item
             name="Spinner"
             label="Spinner"
             value="2"
             type="string"
            />
            <combo_box.item
             name="Slider"
             label="Slider"
             value="3"
             type="string"
            />
            <combo_box.item
             name="Radio"
             label="Radio"
             value="4"
             type="string"
            />
            <combo_box.item
             name="Color 3"
             label="Color 3"
             value="5"
             type="string"
            />
            <combo_box.item
             name="Color 4"
             label="Color 4"
             value="6"
             type="string"
            />
        </combo_box>
        <!-- enable/disable done in code depending on the type of control chosen -->
        <check_box
         name="control_integer_checkbox"
         label="Integer"
         tool_tip="Activate this checkbox if your setting is an integer value, i.e. it has only whole numbers"
         enabled="false"
         top_delta="0"
         left_pad="4"
         height="20"
         width="16"
         follows="left|top"
         layout="topleft"
         enabled_control="QuickPrefsSelectedControl"
        />
        <!-- enable/disable additionally done in code depending on the type of control chosen -->
        <spinner
         name="control_min_edit"
         label="Min:"
         tool_tip="The lowest value you will be allowed to select"
         enabled="false"
         top_pad="7"
         left="4"
         height="22"
         width="81"
         follows="left|top"
         layout="topleft"
         decimal_digits="2"
         enabled_control="QuickPrefsSelectedControl"
         increment="1.0"
         label_width="32"
         max_val="100000.0"
         min_val="-100000.0"
        />
        <spinner
         name="control_max_edit"
         label="Max:"
         tool_tip="The highest value you will be allowed to select"
         enabled="false"
         left_pad="4"
         height="22"
         width="81"
         follows="left|top"
         layout="topleft"
         decimal_digits="2"
         enabled_control="QuickPrefsSelectedControl"
         increment="1.0"
         label_width="32"
         max_val="100000.0"
         min_val="-100000.0"
        />
        <spinner
         name="control_increment_edit"
         label="Incr:"
         tool_tip="The increment for your value when you click the up/down arrow on a spinner or use the cursor keys on a slider"
         enabled="false"
         left_pad="4"
         height="22"
         width="81"
         follows="left|top"
         layout="topleft"
         decimal_digits="2"
         enabled_control="QuickPrefsSelectedControl"
         increment="1.0"
         label_width="32"
         max_val="100000.0"
         min_val="-100000.0"
        />
        <button
         name="Restore_Btn"
         label="Reset"
         tool_tip="Restore the default settings"
         top_pad="4"
         left="4"
         height="16"
         width="120"
         follows="right_top"
         layout="topleft"
        />
        <!-- reverse the image names here beause we have a toggle ON button -->
        <button
         name="button_close"
         tool_tip="Close the edit overlay panel"
         top="10"
         left="-18"
         height="16"
         width="16"
         follows="right|top"
         layout="topleft"
         control_name="QuickPrefsEditMode"
         image_selected="Icon_Close_Foreground"
         image_unselected="Icon_Close_Press"
         toggle="true"
        />
    </panel>
</floater>
